<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>To-Do List</title>
</head>


<body>

    <%- include('./layouts/header')%>
 

    <main>
        <section>
            <% console.log('sssssssssss',task)%>
            <ul>
                <h4>Task title: <%= task.title%></h4>
                <p>Desciption: <%= task.description %></p>
                <p>Contact person: <%= task.contact %></p>
                <p>Completion status: <%= task.status %></p>
                <p>Category: <%= task.category %></p>
            </ul>
        </section>

        <form action="/deleteTask/<%= task.id%>?_method=delete" method="post">
            <button>Delete</button>
        </form>

        <button id="updateBtn">Update</button>
        <section id="updateFrom">
            <h3>Update Task From</h3>
            <form action="/updateTask/<%= task.id%>?_method=put" method="post">
                <input type="text" name="title" value="<%= task.title%>">
                <textarea name="description" cols="30" rows="10"><%= task.description %></textarea>
                <input type="text" name="category" value="<%= task.category %>">
                <input type="text" name="contact" value="<%= task.contact %>">
                <input type="text" name="status" value="<%= task.status %>">
                <button type="submit">Update Task</button>
            </form>
        </section>

    </main>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="/app.js"></script>
</body>

</html>